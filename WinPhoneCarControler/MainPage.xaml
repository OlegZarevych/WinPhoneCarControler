<Page
    x:Class="WinPhoneCarControler.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinPhoneCarControler"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="Header">
        <Canvas x:Name="TitlePanel" Grid.Row="0" Margin="10,20,0,570">
            <TextBlock Text="Car control app" Margin="10,0,10,0" FontSize="20"/>
            <Button x:Name="BluetoothSettings" Content="Bluetooth" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BluetoothSettings_Click" Canvas.Left="270" Canvas.Top="-10"/>
        </Canvas>

        <Canvas Margin="0,100,0,490">
            <TextBlock Text="" x:Name="statusField" Height="45" Width="140" Canvas.Left="250" FontSize="24" />
            <Button x:Name="TestButton" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="23" MinWidth="35" MinHeight="50" Click="TestConntection" Canvas.Left="10" Canvas.Top="1" />
        </Canvas>

        <Canvas x:Name="ControlPanel" Margin="80,220,80,185">
            <Button x:Name="Up" Content="Forward" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Click="Up_Click" Canvas.Left="70"/>
        </Canvas>

    </Grid>
</Page>
